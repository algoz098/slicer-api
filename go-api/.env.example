# Configurações do Servidor
PORT=8080
HOST=0.0.0.0
GIN_MODE=debug
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
SHUTDOWN_TIMEOUT=10s
MAX_REQUEST_SIZE=104857600

# Configurações de Storage
MODELS_PATH=./uploads/models
RESULTS_PATH=./uploads/results
MAX_FILE_SIZE=104857600
CLEANUP_ENABLED=true
RETENTION_DAYS=30

# Configurações da Fila (Redis)
REDIS_URL=redis://localhost:6379
QUEUE_STREAM=slicer:jobs
CONSUMER_GROUP=slicer-workers
MAX_RETRIES=3
RETRY_DELAY=5s
BATCH_SIZE=10
ACK_TIMEOUT=60s

# Configurações do Cache
CACHE_ENABLED=true
CACHE_MAX_SIZE=10737418240
CACHE_TTL=168h
CACHE_CLEAN_INTERVAL=1h

# Configurações dos Workers
WORKER_COUNT=3
MAX_CONCURRENT=5
HEARTBEAT_INTERVAL=30s
SLICER_BINARY=./bin/slicer-headless
WORKER_TIMEOUT=30m

# Configurações de Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE=./logs/slicer-api.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30

# Configurações de Segurança
ENABLE_AUTH=false
JWT_SECRET=your-super-secret-jwt-key-here
API_KEYS=
RATE_LIMIT=100
TRUSTED_PROXIES=
